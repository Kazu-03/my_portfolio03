-if @user.errors.any? 
  .alert
    %ul
      エラーが
      =@user.errors.count
      件あります
      -@user.errors.full_messages.each do |message| 
        %li= message

.new_user_contact_wrapper
  .contact-form
    .top
      .text
        お問い合わせ
    .hr
    = form_for(@user, url: user_registration_path) do |f|

      .basic_information
        .name-label
          お名前
          %span.required 必須
        .name-text
          = f.text_field :nickname, placeholder: '例）フリマ太郎'
        .mail-label
          メールアドレス
          %span.required 必須
        .mail-text
          = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .password-label
          パスワード
          %span.required 必須
        .password-text
          
          = f.password_field :password, placeholder: '7文字以上の半角英数字' 
        .password-caution
          　　　　
        .password-label2
          確認用パスワード
        .password-text2
          
          = f.password_field :password_confirmation, placeholder: 'パスワードをもう一度入力してください'

      .btn-area
        = f.submit "ユーザー登録", class: "btn"