.new_user_contact_wrapper
  .contact-form
    .top
      .text
        お問い合わせ
    .hr
    = form_for(@user, url: user_registration_path) do |f|

      .basic_information
        .name-label
          お名前
          %span.required 必須
        .name-text
          = f.text_field :nickname, placeholder: '例）フリマ太郎'
        .mail-label
          メールアドレス
          %span.required 必須
        .mail-text
          = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .I
        .contact-label
          お問い合わせ概要
          %span.required 必須
        .contact-text
          
          = f.contact_field :contact, placeholder: '7文字以上の半角英数字' 
        .contents-label
          内容
          %span.required 必須
        .contents-text
          = f.contents_field :contents, placeholder: '7文字以上の半角英数字' 
          
          
      .btn-area
        = f.submit "ユーザー登録", class: "btn"